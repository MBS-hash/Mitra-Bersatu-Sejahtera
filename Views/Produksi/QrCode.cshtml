@{
    ViewData["Title"] = "QR Code Produksi";
    var produksi = ViewBag.DataProduksi as MBSAdminApp.Models.Produksi;
}

<h2>QR Code untuk Produksi</h2>

<p><strong>Jenis Proses:</strong> @produksi.JenisProses</p>
<p><strong>Bahan Awal:</strong> @produksi.BahanAwal</p>
<p><strong>Jumlah Awal:</strong> @produksi.JumlahAwalKg Kg</p>
<p><strong>Bahan Hasil:</strong> @produksi.BahanHasil</p>
<p><strong>Jumlah Hasil:</strong> @produksi.JumlahHasilKg Kg</p>
<p><strong>Operator:</strong> @produksi.NamaOperator</p>
<p><strong>Tanggal:</strong> @produksi.Tanggal.ToShortDateString()</p>

<img src="@ViewBag.QrCodeImage" alt="QR Code" style="margin-top:20px; width:250px;" />

<p class="mt-3">
    <a class="btn btn-success" asp-action="DownloadQr" asp-route-id="@produksi.Id">Download PNG</a>
    <a class="btn btn-secondary ms-2" asp-action="Index">Kembali</a>
</p>
