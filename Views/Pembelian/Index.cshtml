@model IEnumerable<MBSAdminApp.Models.Pembelian>

<h2>Daftar Pembelian</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Tambah Pembelian</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Nama Petani</th>
            <th>Wilayah</th>
            <th>Jenis Bahan</th>
            <th>Jumlah (Kg)</th>
            <th>Harga/Kg</th>
            <th>Total Harga</th>
            <th>Tanggal</th>
            <th>Aksi</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.NamaPetani</td>
                <td>@item.Wilayah</td>
                <td>@item.JenisBahan</td>
                <td>@item.JumlahKg</td>
                <td>@item.HargaPerKg.ToString("C")</td>
                <td>@item.TotalHarga.ToString("C")</td>
                <td>@item.Tanggal.ToShortDateString()</td>
                <td>
                    <a asp-action="QrCode" asp-route-id="@item.Id">QR</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Detail</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Hapus</a>
                </td>
            </tr>
        }
    </tbody>
</table>
