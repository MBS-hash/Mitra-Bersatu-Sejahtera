@model MBSAdminApp.Models.Pembelian
@{
    ViewData["Title"] = "Tambah Pembelian";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="NamaPetani" class="control-label"></label>
        <input asp-for="NamaPetani" class="form-control" />
        <span asp-validation-for="NamaPetani" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Wilayah" class="control-label"></label>
        <input asp-for="Wilayah" class="form-control" />
        <span asp-validation-for="Wilayah" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="JenisBahan" class="control-label"></label>
        <input asp-for="JenisBahan" class="form-control" />
        <span asp-validation-for="JenisBahan" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="JumlahKg" class="control-label"></label>
        <input asp-for="JumlahKg" class="form-control" />
        <span asp-validation-for="JumlahKg" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="HargaPerKg" class="control-label"></label>
        <input asp-for="HargaPerKg" class="form-control" />
        <span asp-validation-for="HargaPerKg" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Tanggal" class="control-label"></label>
        <input asp-for="Tanggal" class="form-control" type="date" />
        <span asp-validation-for="Tanggal" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Simpan</button> |
    <a asp-action="Index">Kembali</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
