@{
    ViewData["Title"] = "QR Code Pembelian";
    var pembelian = ViewBag.DataPembelian as MBSAdminApp.Models.Pembelian;
}

<h2>QR Code untuk Pembelian</h2>

<p><strong>Nama Petani:</strong> @pembelian.NamaPetani</p>
<p><strong>Wilayah:</strong> @pembelian.Wilayah</p>
<p><strong>Jenis Bahan:</strong> @pembelian.JenisBahan</p>
<p><strong>Jumlah:</strong> @pembelian.JumlahKg Kg</p>
<p><strong>Tanggal:</strong> @pembelian.Tanggal.ToShortDateString()</p>

<img src="@ViewBag.QrCodeImage" alt="QR Code" style="margin-top:20px; width:250px;" />

<p class="mt-3">
    <a class="btn btn-success" asp-action="DownloadQr" asp-route-id="@pembelian.Id">Download PNG</a>
    <a class="btn btn-secondary ms-2" asp-action="Index">Kembali</a>
</p>
